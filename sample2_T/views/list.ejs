<%-include('header.ejs') %>

<!-- Begin page content -->
<main role="main" class="flex-shrink-0">
    <div class="container">
      <section>
          <div class="row">
              <div class="col-md-12">
                  <div class="box">
                      <div class="box-header with-border">
                      <h3 class="box-title">List</h3>
                      <a href="/write" class="btn btn-primary">글쓰기</a>
                      </div>
  
                      <div class="box-body">
                          <table class="table table-bordered">
                              <tbody>
                                <tr>
                                  <th style="width: 10%">번호</th>
                                  <th style="width: 40%">제목</th>
                                  <th style="width: 20%">작성자</th>
                                  <th style="width: 20%">등록일</th>
                                  <th style="width: 20%">비고</th>
                              </tr>
                              <% lists.forEach(function(item) {%>
                              <tr>
                                  <td><%=item.bno%></td>
                                  <td><a href="/get?bno=<%=item.bno%>"><%=item.title%></a></td>
                                  <td><%=item.writer%></td>
                                  <td><%=item.regdate%></td>
                                  <td><a href="/delete?bno=<%=item.bno%>" class="btn btn-danger" onclick="return confirm('삭제 하겠읍니까?')">delete</a></td>
                              </tr>
                             <%}) %>
                              </tbody></table>
                      </div>
                      
                 </div>
              </div>
          </div>
      </section>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
      <script>window.jQuery || document.write('<script src="https://getbootstrap.com/docs/4.6/assets/js/vendor/jquery.slim.min.js"><\/script>')</script><script src="https://getbootstrap.com/docs/4.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

      
  </body>
</html>