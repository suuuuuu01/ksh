package ch05.sec06;

public class ArrayCreateByNewExample {

	public static void main(String[] args) {
		// 배열의 초기값
		
		int[] arr1 = new int[3]; // new int[배열크기]

		for(int i=0; i<arr1.length; i++) {
			System.out.print("arr1[" + i + "] : " + arr[i] + ",");
		}
		System.out.println();
		
		// 배열 항목의 값 변경
		arr1[0] = 10;
		arr1[1] = 20;
		arr1[2] = 30;
		
		for(int i=0; i<arr1.length; i++) {
			System.out.print("arr1[" + i + "] : " + arr[i] + ",");
		}
	}

}
