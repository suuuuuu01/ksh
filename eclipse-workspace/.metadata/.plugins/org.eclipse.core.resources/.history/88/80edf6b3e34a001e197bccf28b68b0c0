package sec10.exam02;

// 정적 블럭 {...} : 정적필드를 초기화하는 작업에 사용.

public class Television {
	
	static String company = "MyCompany";
	static String model = "LCD";
	static String info;
	
	// 정적블럭 : 정적멤버필드를 초기화 작업.
	static {
		info = company + "-" + model;
	}
	
	// 현재 클래스에 인스턴스 멤버가 존재할 경우에 객체생성구문을 통하여 참조하게 된다.
	// 그럴 일이 없으면, 이런 코드는 작성해선 안 된다.
	Television() {
		company = "";
	}
}
