<%-include('header.ejs') %>

<main role="main" class="flex-shrink-0">
  <div class="container"> <!-- container 큰 틀을 잡는다 -->
    <section>
      <div class="row"> <!-- <tr>과 같은 느낌. row 안에는 <td>를 합이 12까지 사용 가능하다. -->
        <div class="col-md-12"> <!-- <tr> 하나에 <td>를 하나만 쓰겠다는 의미 -->
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">List</h3>
              <a href="/write" class="btn btn-primary">상품목록</button> 
            </div>

            <div class="box-body">
              <table class="table table-bordered">
                <tbody>
                  
                  <tr>
                    <th style="width : 10%">상품번호</th>
                    <th style="width : 40%">상품명</th>
                    <th style="width : 20%">상품이미지</th>
                    <th style="width : 20%">등록일</th>
                  </tr>

                  <!-- EJS문법 -->
                  <% lists.forEach(function(item) {%>
                    <tr>
                      <td><%=item.p_code%> </td>
                      <td><%=item.p_name%> </td><!-- data-이름-값 : 값을 변수에? 저장하기 위한 것-->
                      <td><img src = "/upload/<%=item.p_s_img%>"></td>
                      <td><%=item.regdate%></td>
                      <td><a href="/delete?bno=<%=item.bno%>" class="btn btn-danger" onclick="return confirm('삭제할꺼임?')">삭제</a></td>
                    </tr>
                    <%})%>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
    </section>
  </div>
</main>